Public Class PM_StdRpt_UllageAverageCapacityConversionMasterList_Preview : Inherits Page

    Protected WithEvents crvView As CrystalDecisions.Web.CrystalReportViewer
    Protected WithEvents tblCrystal As System.Web.UI.HtmlControls.HtmlTable
    Protected WithEvents lblErrMessage As Label
    Protected WithEvents EventData As DataGrid

    Dim objPMSetup As New agri.PM.clsSetup()
    Dim objPMRpt As New agri.PM.clsReport()

    Dim strCompany As String
    Dim strCompanyName As String
    Dim strLocation As String
    Dim strUserId As String
    Dim strUserName As String
    Dim strLangCode As String

    Dim strUVTableCode As String
    Dim strStatus As String

    Dim intDecimal As Integer
    Dim tempLoc As String

    Dim rdCrystalViewer As New ReportDocument()
    Dim intErrNo As Integer

    Sub Page_Load(ByVal Sender As Object, ByVal E As EventArgs)
        crvView.Visible = False
        intDecimal = Request.QueryString("Decimal")
        strCompany = Session("SS_COMPANY")
        strCompanyName = Session("SS_COMPANYNAME")
        strLocation = Session("SS_LOCATION")
        strUserId = Session("SS_USERID")
        strUserName = Session("SS_USERNAME")
        strLangCode = Session("SS_LANGCODE")

        strUVTableCode = Trim(Request.QueryString("strUVTableCode"))
        strStatus = Request.QueryString("strStatus")
        
        If strUserId = "" Then
            Response.Redirect("/SessionExpire.aspx")
        Else
            BindReport()
        End If
    End Sub

    Sub BindReport()

        Dim objRptDs As New DataSet()
        Dim objMapPath As String

        Dim crExportOptions As ExportOptions
        Dim crDiskFileDestinationOptions As DiskFileDestinationOptions

        Dim strOpCd As String = "PM_STDRPT_UACAPACITYCONVERSION_MASTERLIST_GET"
        Dim strFileName As String = "PM_StdRpt_UllageAverageCapacityConversionMasterList"

        Dim strParam As String
        Dim I As Long

        strParam = ""
        If strUVTableCode <> "" Then
            strParam = strParam & " AND UACC.UVTableCode LIKE '" & Replace(strUVTableCode, "'", "''") & "' "
        End If
        If strStatus <> objPMSetup.EnumUllageAverageCapacityConversionStatus.All Then
            strParam = strParam & " AND UACC.Status LIKE '" & strStatus & "' "
        End If
        strStatus = objPMSetup.mtdGetUllageAverageCapacityConversionStatus(strStatus)

        Try
            intErrNo = objPMRpt.mtdGetMasterList(strOpCd, _
                                                strParam, _
                                                objRptDs, _
                                                objMapPath)
        Catch Exp As Exception
            Response.Redirect("../../include/mesg/ErrorMessage.aspx?errcode=PM_STDRPT_UVTABEL_MASTER_LIST&errmesg=" & lblErrMessage.Text & "&redirect=")
        End Try
        
        For I = 0 To objRptDs.Tables(0).Rows.Count - 1
            objRptDs.Tables(0).Rows(I).Item("Status") = objPMSetup.mtdGetUllageAverageCapacityConversionStatus(objRptDs.Tables(0).Rows(I).Item("Status"))
        Next
        

        rdCrystalViewer.Load(objMapPath & "web\" & strLangCode & "\Reports\Crystal\" & strFileName & ".rpt", OpenReportMethod.OpenReportByTempCopy)
        rdCrystalViewer.SetDataSource(objRptDs.Tables(0))

        rdCrystalViewer.PrintOptions.PaperOrientation = PaperOrientation.Landscape
        rdCrystalViewer.PrintOptions.PaperSize = PaperSize.PaperA3

        crvView.Visible = False                         
        crvView.ReportSource = rdCrystalViewer          
        crvView.DataBind()                              

        PassParam()

        crDiskFileDestinationOptions = New DiskFileDestinationOptions()
        crDiskFileDestinationOptions.DiskFileName = objMapPath & "web\ftp\" & strFileName & ".pdf"

        crExportOptions = rdCrystalViewer.ExportOptions
        With crExportOptions
            .DestinationOptions = crDiskFileDestinationOptions
            .ExportDestinationType = ExportDestinationType.DiskFile
            .ExportFormatType = ExportFormatType.PortableDocFormat
        End With

        rdCrystalViewer.Export()
        Response.Write("<META HTTP-EQUIV=""refresh"" CONTENT=""0; URL=../../ftp/" & strFileName & ".pdf"">")
    End Sub

